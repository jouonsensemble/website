{% set games = games ?? [] %}

{% if games is not empty %}
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
        {% for game in games %}
            <div class="text-center">
                <a href="{{ game.url }}" target="_blank" rel="noopener noreferrer">
                    <img src="{{ game.image }}" alt="{{ game.title }}" loading="lazy" decoding="async" width="160" height="96" class="game-image w-full h-24 object-cover rounded mb-2 hover:opacity-80 transition-opacity" />
                    <p class="text-sm font-medium hover:text-primary transition-colors">{{ game.title }}</p>
                </a>
            </div>
        {% endfor %}
    </div>
{% else %}
    <p class="text-sm text-gray-500">La liste des jeux n'est pas disponible pour le moment.</p>
{% endif %}
